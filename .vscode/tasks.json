{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gem: build",
            "type": "shell",
            "command": "gem build jekyll-theme-profile.gemspec"
        },
        {
            "label": "gem: push",
            "type": "shell",
            "command": "gem push jekyll-theme-profile-*.gem"
        },
        {
            "label": "bundle: update",
            "type": "shell",
            "command": "bundle update",
            "problemMatcher": []
        },
        {
            "label": "bundle: install",
            "type": "shell",
            "command": "bundle install",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ".github/build.sh",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": ".github/test.sh",
            "problemMatcher": {
                "owner": "htmlproofer",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^\\* At\\s(.+):([0-9]+):$", 
                        "file": 1,
                        "line": 2, 
                        "message": 0
                    }
                ]
            },
            "group": "test",
            "dependsOn": [
                "build"
            ],
            "options": {
                "env": {
                    "HOSTURL": "www.althack.dev",
                    "BASEURL": "/jekyll-theme-profile"
                }
            }
        },
        {
            "label": "serve",
            "type": "shell",
            "command": ".github/serve.sh",
            "problemMatcher": []
        },
        {
            "label": "build demo",
            "type": "shell",
            "command": ".github/build.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "options": {
                    "env": {
                        "JEKYLL_FOLDER": "demo",
                        "JEKYLL_SITE": "_site/demo"
                    }
                }
            }
        },
        {
            "label": "test demo",
            "type": "shell",
            "command": ".github/test.sh",
            "problemMatcher": {
                "owner": "htmlproofer",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^\\* At\\s(.+):([0-9]+):$",
                        "file": 1, 
                        "line": 2, 
                        "message": 0
                    }
                ]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build demo"
            ],
            "options": {
                "env": {
                    "HOSTURL": "www.althack.dev",
                    "BASEURL": "/jekyll-theme-profile",
                    "JEKYLL_FOLDER": "demo",
                    "JEKYLL_SITE": "demo/_site"
                }
            }
        },
        {
            "label": "serve demo",
            "type": "shell",
            "command": ".github/serve.sh",
            "problemMatcher": [],
            "linux": {
                "options": {
                    "env": {
                        "JEKYLL_FOLDER": "demo",
                        "JEKYLL_SITE": "demo/_site"
                    }
                }
            }
        },
        {
            "label": "release",
            "type": "shell",
            "command": ".github/release.sh jekyll-theme-profile.gemspec",
            "problemMatcher": []
        },
    ]
}
